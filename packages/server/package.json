{
  "name": "@drycore/server",
  "version": "0.1.0",
  "description": "DRYcore server package",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:express",
    "start": "node dist/index.js",
    "generate": "ts-node src/generators/drizzle.ts",
    "generate:client": "ts-node src/generators/client.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "api:docs": "ts-node src/generators/api-docs.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:e2e": "jest --testMatch='**/tests/e2e/**/*.test.ts'",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.1.2",
    "@prisma/client": "^5.10.0",
    "drizzle-orm": "^0.29.3",
    "hono": "^3.9.0",
    "dotenv": "^16.4.5",
    "mysql2": "^3.9.1",
    "zod": "^3.22.2",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.4",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "esbuild": "^0.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.10.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "openapi-typescript": "^6.7.4",
    "nodemon": "^3.0.1"
  }
} 