{
  "name": "drycore",
  "version": "1.0.0",
  "description": "基于DRY原则的全栈开发框架",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm run dev --filter @drycore/server",
    "build": "pnpm run build --filter=\"./packages/*\"",
    "generate": "pnpm run generate --filter @drycore/server",
    "prisma:generate": "pnpm run prisma:generate --filter @drycore/server",
    "prisma:migrate": "pnpm run prisma:migrate --filter @drycore/server",
    "prisma:studio": "pnpm run prisma:studio --filter @drycore/server",
    "docs:dev": "pnpm run dev --filter docs",
    "docs:build": "pnpm run build --filter docs",
    "test": "pnpm run test --filter=\"./packages/*\"",
    "lint": "pnpm run lint --filter=\"./packages/*\"",
    "lint:fix": "pnpm run lint --filter=\"./packages/*\" -- --fix",
    "lint:paths": "bash scripts/check-imports.sh",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm run clean --filter=\"./packages/*\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
} 